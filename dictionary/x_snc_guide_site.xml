<?xml version="1.0" encoding="UTF-8"?>
<database>
    <element label="Site" max_length="40" name="x_snc_guide_site" type="collection">
        <element default="true" label="Active" max_length="40" name="active" type="boolean"/>
        <element label="Booking site" max_length="1024" name="booking_site" type="url"/>
        <element default="0" label="Cost" max_length="20" name="cost" type="currency"/>
        <element default="0" label="Dislike" max_length="40" name="dislike" type="integer"/>
        <element default="0" label="Like" max_length="40" name="like" type="integer"/>
        <element display="true" label="Name" max_length="80" name="name" type="string"/>
        <element label="Owner" max_length="32" name="owner" reference="sys_user" type="reference"/>
        <element label="Phone" max_length="40" name="phone" type="phone_number_e164"/>
        <element label="Photo" max_length="40" name="photo" type="user_image"/>
        <element default="0.0" label="Rating ratio" max_length="40" name="rating_ratio" type="float"/>
        <element choice="1" label="Type" max_length="40" name="type" type="choice">
            <choice>
                <element label="Aquarium" sequence="0" value="Aquarium"/>
                <element label="Convention Center" sequence="1" value="Convention Center"/>
                <element label="Entertainment" sequence="2" value="Entertainment"/>
                <element label="Historical Monument" sequence="3" value="Historical Monument"/>
                <element label="Museum" sequence="4" value="Museum"/>
                <element label="Planetarium" sequence="5" value="Planetarium"/>
                <element label="Restaurant" sequence="6" value="Restaurant"/>
                <element label="Scenic" sequence="7" value="Scenic"/>
                <element label="Sports Arena" sequence="8" value="Sports Arena"/>
                <element label="Transportation" sequence="9" value="Transportation"/>
            </choice>
        </element>
        <element default="0" label="Wait time" max_length="40" name="wait_time" type="integer"/>
        <element label="Webcam" max_length="1024" name="webcam" type="url"/>
        <element label="Website" max_length="1024" name="website" type="url"/>
        <index name="index">
            <element name="owner"/>
        </index>
    </element>
</database>
